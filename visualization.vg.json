{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 1500,
  "height": 1200,
  "title": {
    "text": "Kickstarter Projects from Around the World",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/snag41/FIT3179/master/assignment2-data-graph.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "geojson",
          "fields": ["Longitude", "Latitude"],
          "signal": "layer_1_geojson_0"
        },
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["Longitude", "Latitude"],
          "as": ["layer_1_x", "layer_1_y"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Total Count\"]) && isFinite(+datum[\"Total Count\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "[data('source_0'), layer_1_geojson_0]"},
      "type": "equirectangular"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "lightgray"},
          "stroke": {"value": "white"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "symbol",
      "style": ["circle"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "opacity": {"value": 0.7},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Total Count\": format(datum[\"Total Count\"], \"\")}"
          },
          "fill": {"scale": "color", "field": "Total Count"},
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"Longitude: \" + (format(datum[\"Longitude\"], \"\")) + \"; Latitude: \" + (format(datum[\"Latitude\"], \"\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Total Count: \" + (format(datum[\"Total Count\"], \"\"))"
          },
          "x": {"field": "layer_1_x"},
          "y": {"field": "layer_1_y"},
          "shape": {"value": "circle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "source_1", "field": "Total Count"},
      "range": {"scheme": "redblue"},
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "title": "Total Count",
      "encode": {"gradient": {"update": {"opacity": {"value": 0.7}}}}
    }
  ],
  "config": {}
}
